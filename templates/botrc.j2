#!/bin/bash
#
# {{ ansible_managed }}
#
# Bash script to set environment variables for PushBot.

# Slack adapter

export HUBOT_SLACK_TOKEN="{{ pushbot_slack_token }}"

# hubot-markov

export HUBOT_MARKOV_LEARN_MIN=2
export HUBOT_MARKOV_GENERATE_MAX=100

# hubot-greetings

export HUBOT_GREETINGS_FFA=1

# hubot-quotefile

export HUBOT_QUOTEFILE_PATH={{ pushbot_home }}/botdata/quotes

export HUBOT_AUTH_ADMIN=U02D23B7J,U02D23G6N
export HUBOT_BETRAY_IMMUNE=U02D23B7J,U02D23G6N,U02D25HJG,U02D1CX67
